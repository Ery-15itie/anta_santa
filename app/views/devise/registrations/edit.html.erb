<h2>プロフィール編集</h2>

<%#  data: { turbo: false } を追加%>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
  
  <%# エラーメッセージの表示 %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <%# ▼ 公開ID ▼ %>
  <div class="field mb-3">
    <%= f.label :public_id, "公開ID", class: "form-label" %><br />
    <%= f.text_field :public_id, autocomplete: "off", placeholder: "例: user_name123", class: "form-control" %>
    <div style="font-size: 0.8rem; color: #666; margin-top: 2px;">
      ※フレンドからの検索に使われます（半角英数のみ）
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-3">
    <%= f.label :password, "新しいパスワード", class: "form-label" %> <i>(変更しない場合は空欄)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <em style="font-size: 0.8rem;"><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= f.label :current_password, "現在のパスワード", class: "form-label" %> <i>(変更を保存するには入力が必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "変更を保存する", class: "btn btn-primary" %>
  </div>
<% end %>

<hr class="my-4">

<h3>アカウント削除</h3>

<div>
  気に入らない場合は削除できます 
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger btn-sm" %>
</div>

<div class="mt-3">
  <%= link_to "戻る", :back %>
</div>